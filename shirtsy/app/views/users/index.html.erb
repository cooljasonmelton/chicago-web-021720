<% if current_user %>
  <h1>Users - Welcome <%= current_user.name %>!</h1>
<% else %>
  <h1>Users</h1>
<% end %>

<%= link_to "Create new", new_user_path %>

<% if current_user %>
  <%= link_to "Log Out", logout_path, method: :delete %>
<% else %>
  <%= link_to "Log In", login_path%>
<% end %>

<% @users.each do |user| %>
  <% if logged_in? && current_user.id == user.id %>
    <p><%= link_to user.name, user %></p>
  <% else %>
    <p><%= user.name %></p>
  <% end %>
<% end %>